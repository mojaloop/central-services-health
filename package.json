{
  "name": "@mojaloop/central-services-health",
  "version": "13.0.1",
  "description": "Shared code for generic health check servers",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "test": "npm run test:unit | faucet",
    "pretest": "npm run build",
    "standard": "echo '\\033[1;33m  This project uses eslint instead of standard. Use `npm run lint` instead.'",
    "lint": "eslint ./src/**/*.ts ./test/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "build": "tsc",
    "watch": "tsc -w",
    "test:unit": "ts-node node_modules/tape/bin/tape 'test/unit/**/*.test.ts'",
    "test:xunit": "npm run test:unit | tap-xunit",
    "test:coverage": "nyc --require ts-node/register tape test/unit/**/*.test.{ts,js} | tap-spec; nyc report ---reporter=text",
    "audit:resolve": "SHELL=sh resolve-audit --production",
    "audit:check": "SHELL=sh check-audit --production",
    "dep:check": "npx ncu -e 2",
    "dep:update": "npx ncu -u"
  },
  "pre-commit": [
    "dep:check",
    "build",
    "lint",
    "test:unit"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mojaloop/central-services-metrics.git"
  },
  "keywords": [
    "metrics",
    "central",
    "services"
  ],
  "author": "lewisdaly",
  "contributors": [
    "Lewis Daly <lewis@vesselstech.com>",
    "Miguel de Barros <miguel.debarros@modusbox.com>",
    "Pawel Marzec <pawel.marzec@modusbox.com>"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mojaloop/central-services-health/issues"
  },
  "homepage": "https://github.com/mojaloop/central-services-health#readme",
  "dependencies": {
    "@hapi/hapi": "20.1.3",
    "tslib": "2.2.0"
  },
  "peerDependencies": {
    "@mojaloop/central-services-error-handling": "11.3.0",
    "@mojaloop/central-services-logger": "10.6.1"
  },
  "peerDependenciesMeta": {
    "@mojaloop/central-services-error-handling": {
      "optional": false
    },
    "@mojaloop/central-services-logger": {
      "optional": false
    }
  },
  "devDependencies": {
    "@mojaloop/central-services-error-handling": "11.3.0",
    "@mojaloop/central-services-logger": "10.6.1",
    "@types/hapi__hapi": "20.0.8",
    "@types/node": "15.0.3",
    "@types/sinon": "10.0.0",
    "@types/tape": "4.13.0",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "debug": "4.3.1",
    "eslint": "7.26.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.23.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-standard": "5.0.0",
    "faucet": "0.0.1",
    "npm-audit-resolver": "2.3.0",
    "npm-check-updates": "11.5.11",
    "nyc": "15.1.0",
    "pre-commit": "1.2.2",
    "prettier": "2.3.0",
    "sinon": "10.0.0",
    "tap-spec": "5.0.0",
    "tap-xunit": "2.4.1",
    "tape": "5.2.2",
    "tapes": "4.1.0",
    "ts-node": "9.1.1",
    "tslint": "6.1.3",
    "typedoc": "^0.20.36",
    "typescript": "4.2.4"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "test/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ]
  }
}
